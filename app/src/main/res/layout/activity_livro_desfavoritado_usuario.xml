<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A3FCC"
    tools:context=".LivroDesfavoritadoUsuarioActivity">

    <!-- Botão de Voltar -->
    <ImageView
        android:id="@+id/btnVoltarLivroDesfavoritadoUsuario"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_margin="16dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/seta"
        android:tint="#FFFFFF"
        android:contentDescription="Voltar"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackgroundBorderless" />


    <!-- CARD CENTRAL -->
    <LinearLayout
        android:id="@+id/cardLivroDesfavoritadoUsuario"
        android:layout_width="294dp"
        android:layout_height="514dp"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_card"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Capa -->
        <ImageView
            android:id="@+id/imgCapaLivroDesfavoritadoUsuario"
            android:layout_width="130dp"
            android:layout_height="190dp"
            android:layout_marginBottom="8dp"
            android:contentDescription="Capa do livro"
            android:src="@drawable/livro_turmamonica" />

        <!-- Avaliação + Favorito -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="center">

            <RatingBar
                android:id="@+id/ratingLivroDesfavoritadoUsuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:isIndicator="true"
                android:numStars="5"
                android:progressTint="#FFD700"
                android:rating="4"
                android:scaleX="0.9"
                android:scaleY="0.9"
                android:stepSize="0.5" />

            <ImageView
                android:id="@+id/iconFavoritoLivroDesfavoritadoUsuario"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginStart="6dp"
                android:contentDescription="Ícone de favorito"
                android:src="@drawable/desfavoritado" />
        </LinearLayout>

        <!-- Título -->
        <TextView
            android:id="@+id/txtTituloLivroDesfavoritadoUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Corpo Humano – Turma da Mônica"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold" />

        <!-- Status -->
        <TextView
            android:id="@+id/txtStatusLivroDesfavoritadoUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:gravity="center"
            android:text="Indisponível"
            android:textColor="#FF0000"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnFavoritosAtualizado"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:backgroundTint="#FFFFFF"
            android:text="Favoritos"
            android:textColor="#000000"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Barra inferior -->
    <LinearLayout
        android:id="@+id/barraInferiorLivroDesfavoritadoUsuario"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/iconHomeLivroDesfavoritadoUsuario"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginHorizontal="20dp"
            android:src="@drawable/home"
            android:tint="#FFFFFF"
            android:contentDescription="Home" />

        <ImageView
            android:id="@+id/iconChatbotLivroDesfavoritadoUsuario"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginHorizontal="20dp"
            android:src="@drawable/chatbot_ema"
            android:contentDescription="Mascote" />

        <ImageView
            android:id="@+id/iconMensagemLivroDesfavoritadoUsuario"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginHorizontal="20dp"
            android:src="@drawable/email"
            android:contentDescription="Mensagem" />

        <ImageView
            android:id="@+id/iconMenuLivroDesfavoritadoUsuario"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginHorizontal="20dp"
            android:src="@drawable/menu_hamb"
            android:tint="#FFFFFF"
            android:contentDescription="Menu" />
    </LinearLayout>

</RelativeLayout>

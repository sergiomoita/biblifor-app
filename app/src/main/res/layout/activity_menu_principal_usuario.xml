<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#004AF7"
    tools:context=".MenuPrincipalUsuarioActivity">

    <!-- CONTEÚDO ROLÁVEL -->
    <ScrollView
        android:id="@+id/scrollConteudo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:paddingTop="16dp">

            <!-- LOGO E CABEÇALHO -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/leoLogoUnifor3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/logo_unifor" />

                <TextView
                    android:id="@+id/leotextViewUnifor3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Unifor Biblifor"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- PERFIL -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/leoFotoUser3"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    tools:src="@drawable/foto_user" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:id="@+id/leoOlaUsuario3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Olá, Maria Luísa"
                        android:fontFamily="@font/poppins_semibold"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/leoMatricula3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2120347"
                        android:textColor="#EDEDED"
                        android:textSize="15sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/leoAcessibilidade3"
                    android:layout_width="30dp"
                    android:layout_height="36dp"
                    android:tint="#FFFFFF"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/acessibilidade" />

                <ImageView
                    android:id="@+id/leoNotificacao3"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:tint="#FFFFFF"
                    android:src="@drawable/notificacao" />

                <ImageView
                    android:id="@+id/bolinhaCima"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/bola_notificacao"
                    android:visibility="gone"
                    android:layout_marginTop="2dp"
                    android:translationX="-6dp" />


            </LinearLayout>

            <!-- BARRA DE PESQUISA -->
            <LinearLayout
                android:id="@+id/barraPesquisa"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="24dp"
                android:orientation="horizontal"
                android:background="@drawable/bg_toast_branco"
                android:paddingHorizontal="12dp"
                android:gravity="center_vertical">

                <EditText
                    android:id="@+id/leoPesquisa3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="Pesquisar material de leitura..."
                    android:textColor="#000000"
                    android:textColorHint="#777777"
                    android:background="@android:color/transparent"
                    android:paddingStart="8dp"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/leoLupaPesquisa3"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/lupa_pesquisar" />
            </LinearLayout>

            <!-- HISTÓRICO DE EMPRÉSTIMOS -->
            <!-- HISTÓRICO DE EMPRÉSTIMOS -->
            <LinearLayout
                android:id="@+id/btnHistorico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:weightSum="1">

                <TextView
                    android:id="@+id/leoTituloHistorico3"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Histórico de Empréstimos"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/btnVerMaisHistorico"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ver mais"
                    android:textColor="#E0E0E0"
                    android:textStyle="italic"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- IMAGEM + TEXTO (ESCONDIDOS) -->
            <ImageView
                android:id="@+id/leoEmaSemHistorico"
                android:layout_width="180dp"
                android:layout_height="80dp"
                android:layout_marginTop="14dp"
                android:layout_gravity="center"
                android:src="@drawable/ema_deitada"
                android:visibility="gone" />

            <TextView
                android:id="@+id/leoTextoSemHistorico"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Você não possui nenhum empréstimo realizado"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:layout_marginTop="6dp"
                android:visibility="gone" />

            <!-- RECYCLER VIEW DO HISTÓRICO -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvHistorico"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginTop="12dp"
                android:clipToPadding="false"
                android:padding="4dp"
                android:nestedScrollingEnabled="false"
                tools:listitem="@layout/item_historico" />


            <!-- FAVORITOS -->
            <LinearLayout
                android:id="@+id/btnFavoritos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:weightSum="1">

                <TextView
                    android:id="@+id/leoFavoritos3"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Favoritos"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/btnVerMaisFavoritos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ver mais"
                    android:textColor="#E0E0E0"
                    android:textStyle="italic"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- RecyclerView de Favoritos -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvFavoritos"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginTop="10dp"
                android:clipToPadding="false"
                android:padding="4dp"
                android:nestedScrollingEnabled="false"
                tools:listitem="@layout/item_favorito" />

            <!-- ÚLTIMOS AVISOS -->
            <LinearLayout
                android:id="@+id/btnAvisos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:weightSum="1">

                <TextView
                    android:id="@+id/leoUltimosAvisos3"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Últimos Avisos"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/btnVerMaisAvisos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ver mais"
                    android:textColor="#E0E0E0"
                    android:textStyle="italic"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- RecyclerView dos Avisos -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvUltimosAvisos"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginTop="10dp"
                android:clipToPadding="false"
                android:padding="4dp"
                android:nestedScrollingEnabled="false"
                tools:listitem="@layout/item_aviso" />

        </LinearLayout>
    </ScrollView>

    <!-- BARRA INFERIOR FIXA -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="#004AF7"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="32dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/leoLogoHome3"
            android:layout_width="57dp"
            android:layout_height="55dp"
            android:tint="#FFFFFF"
            android:src="@drawable/home"
            android:layout_marginHorizontal="16dp" />

        <ImageView
            android:id="@+id/leoImagemChatbot3"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/chatbot_ema"
            android:layout_marginHorizontal="16dp" />


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/leoImagemNotificacoes3"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/email"
                android:layout_marginHorizontal="16dp" />

            <ImageView
                android:id="@+id/bolinhaBaixo"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/bola_notificacao"
                android:visibility="gone"
                android:layout_gravity="end|top"
                android:translationX="3dp"
                android:translationY="-3dp"/>
        </FrameLayout>


        <ImageView
            android:id="@+id/leoImagemMenu3"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:tint="#FFFFFF"
            android:src="@drawable/menu_hamb"
            android:layout_marginHorizontal="16dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#004AF7"
    tools:context=".RenovacaoEmprestimoUsuarioActivity">

    <!-- Cabeçalho com logo -->
    <ImageView
        android:id="@+id/lopesLogoUnifor33"
        android:layout_width="83dp"
        android:layout_height="74dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_unifor" />

    <TextView
        android:id="@+id/lopesNomeUnifor33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Unifor Biblifor"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/lopesLogoUnifor33"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Botão Voltar -->
    <ImageView
        android:id="@+id/lopesSetaVoltar33"
        android:layout_width="44dp"
        android:layout_height="33dp"
        android:layout_marginTop="96dp"
        android:tint="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/seta" />

    <!-- Título principal -->
    <TextView
        android:id="@+id/lopesRenovacaoEmprestimo33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="156dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Renovação de empréstimo"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Imagem do livro (centralizada e equilibrada) -->

    <!-- Legenda organizada (nome, autor, datas) -->

    <ImageView
        android:id="@+id/lopesLivroRomeuJulieta33"
        android:layout_width="130dp"
        android:layout_height="230dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="36dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lopesRenovacaoEmprestimo33"
        app:srcCompat="@drawable/livro_romeu2" />

    <LinearLayout
        android:id="@+id/infoLivroLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="24dp"
        android:orientation="vertical"
        android:gravity="start"
        app:layout_constraintTop_toTopOf="@id/lopesLivroRomeuJulieta33"
        app:layout_constraintBottom_toBottomOf="@id/lopesLivroRomeuJulieta33"
        app:layout_constraintStart_toEndOf="@id/lopesLivroRomeuJulieta33"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/lopesNomeRomeu33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:text="Romeu e Julieta"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:layout_marginBottom="6dp" />

        <TextView
            android:id="@+id/lopesAutorRomeu33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_light"
            android:text="W. Shakespeare"
            android:textColor="#FFFFFF"
            android:textSize="13sp"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/lopesDataDevolucao33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:text="Data de devolução: 28/12/2022"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/lopesNovaData33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:text="Nova devolução: 10/02/2023"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />
    </LinearLayout>

    <!-- Lista de termos -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerTermos33"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="160dp"
        android:background="#FFFFFF"
        android:padding="14dp"
        app:layout_constraintTop_toBottomOf="@id/lopesLivroRomeuJulieta33"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/lopesBtnAceitar33"
        tools:listitem="@layout/item_termo" />

    <!-- Botões Aceitar / Recusar -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="120dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/lopesBtnRecusar33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#F4F4F4"
            android:text="Recusar"
            android:textColor="#121212"
            android:layout_marginEnd="24dp" />

        <Button
            android:id="@+id/lopesBtnAceitar33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#F4F4F4"
            android:text="Aceitar"
            android:textColor="#121212" />
    </LinearLayout>

    <!-- Barra inferior -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/leoLogoHome3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:tint="#FFFFFF"
            app:srcCompat="@drawable/home" />

        <ImageView
            android:id="@+id/leoImagemChatbot3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            app:srcCompat="@drawable/chatbot_ema" />

        <ImageView
            android:id="@+id/leoImagemNotificacoes3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/email" />

        <ImageView
            android:id="@+id/leoImagemMenu3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="32dp"
            android:tint="#FFFFFF"
            app:srcCompat="@drawable/menu_hamb" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

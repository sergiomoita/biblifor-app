<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#004AF7"
    tools:context=".HistoricoEmprestimosUsuarioActivity">

    <!-- LOGO E CABEÇALHO -->
    <LinearLayout
        android:id="@+id/containerLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/leoLogoUniforPU5"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/logo_unifor" />

        <TextView
            android:id="@+id/leotextViewUniforPU5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="sans-serif"
            android:text="Unifor Biblifor"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- BOTÃO DE VOLTAR ABAIXO DO LOGO -->
    <ImageView
        android:id="@+id/btnVoltarHistorico"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:contentDescription="Voltar"
        android:src="@drawable/seta"
        android:tint="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/containerLogo"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- TÍTULO PRINCIPAL -->
    <TextView
        android:id="@+id/lopesEmprestar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Histórico de Empréstimos"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        app:layout_constraintTop_toBottomOf="@id/btnVoltarHistorico"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- SUBTÍTULO -->
    <TextView
        android:id="@+id/lopesDefina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Livros emprestados por você."
        android:textColor="#FFFFFF"
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@+id/lopesEmprestar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- LISTA (RECYCLERVIEW) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvHistorico"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="96dp"
        android:clipToPadding="false"
        android:overScrollMode="never"
        app:layout_constraintTop_toBottomOf="@id/lopesDefina"
        app:layout_constraintBottom_toTopOf="@id/barraInferior"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- BARRA INFERIOR FIXA -->
    <LinearLayout
        android:id="@+id/barraInferior"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#004AF7"
        android:paddingHorizontal="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/leoLogoHome3"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:src="@drawable/home"
            android:tint="#FFFFFF" />

        <ImageView
            android:id="@+id/leoImagemChatbot3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/chatbot_ema" />

        <ImageView
            android:id="@+id/leoImagemNotificacoes3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/email" />

        <ImageView
            android:id="@+id/leoImagemMenu3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/menu_hamb"
            android:tint="#FFFFFF" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

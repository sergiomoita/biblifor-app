<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A3FCC"
    tools:context=".PerfilAdministradorActivity">

    <!-- LOGO -->
    <ImageView
        android:id="@+id/leoLogoUniforPADM42"
        android:layout_width="90dp"
        android:layout_height="62dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/logo_unifor" />

    <TextView
        android:id="@+id/leotextViewUniforPADM42"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unifor Biblifor"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/leoLogoUniforPADM42"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- SETA VOLTAR -->
    <ImageView
        android:id="@+id/leoImagemSetaPADM42"
        android:layout_width="34dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:tint="#FFFFFF"
        app:srcCompat="@drawable/seta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- ÍCONE NOTIFICAÇÃO -->
    <ImageView
        android:id="@+id/leoImagemNotificacaoSuperiorPADM42"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="16dp"
        android:tint="#FFFFFF"
        app:srcCompat="@drawable/notificacao"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <!-- FOTO + BOTÃO EDITAR -->
    <FrameLayout
        android:id="@+id/frameAdmFoto"
        android:layout_width="118dp"
        android:layout_height="118dp"
        android:layout_marginTop="120dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/leoFotoPerfilAdmPADM42"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_foto_redonda"
            android:clipToOutline="true"
            android:scaleType="centerCrop"
            tools:srcCompat="@drawable/foto_adm" />

        <ImageView
            android:id="@+id/leoBotaoEditarPerfilAdmNew"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom|end"
            android:padding="8dp"
            android:tint="#FFFFFF"
            app:srcCompat="@drawable/editar" />
    </FrameLayout>

    <!-- NOME -->
    <TextView
        android:id="@+id/leoNomeAdmPADM42"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hugo Moura"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/frameAdmFoto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- MATRÍCULA -->
    <TextView
        android:id="@+id/leoMatriculaAdmPADM42"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1020185"
        android:textColor="#EAEAEA"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/leoNomeAdmPADM42"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <!-- ===================== -->
    <!-- CARD DO NOME COMPLETO -->
    <!-- ===================== -->
    <LinearLayout
        android:id="@+id/cardNomeAdm"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_card_moderno"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@id/leoMatriculaAdmPADM42"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/leoTituloNomeCompletoPADM42"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome"
            android:textColor="#A5B4FF"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/leoNomeCompletoAdmPADM42"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hugo Moura"
            android:textColor="#FFFFFF"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_marginTop="4dp" />
    </LinearLayout>


    <!-- ===================== -->
    <!-- CARD DA FUNÇÃO        -->
    <!-- ===================== -->
    <LinearLayout
        android:id="@+id/cardFuncaoAdm"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_card_moderno"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@id/cardNomeAdm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/leoTituloFuncaoPADM42"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Função"
            android:textColor="#A5B4FF"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/leoNomeFuncaoAdmPADM42"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bibliotecário"
            android:textColor="#FFFFFF"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_marginTop="4dp" />
    </LinearLayout>


    <!-- TÍTULO EVENTOS -->
    <TextView
        android:id="@+id/tituloEventosPerfilAdm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eventos"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/cardFuncaoAdm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <!-- RECYCLER EVENTOS -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvEventosPerfilAdm"
        android:layout_width="330dp"
        android:layout_height="230dp"
        android:padding="10dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/tituloEventosPerfilAdm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <!-- BARRA INFERIOR PADRONIZADA ADM -->
    <LinearLayout
        android:id="@+id/barraInferiorCapsulasAdmSergio"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="#0A3FCC"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingHorizontal="32dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- HOME (ADM) -->
        <ImageView
            android:id="@+id/iconHomeCapsulasAdmSergio"
            android:layout_width="57dp"
            android:layout_height="55dp"
            android:tint="#FFFFFF"
            android:src="@drawable/home"
            android:layout_marginHorizontal="16dp" />

        <!-- ESCREVER (ADM) -->
        <ImageView
            android:id="@+id/iconEscreverMsgCapsulasAdmSergio"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:tint="#FFFFFF"
            android:src="@drawable/escrever_mensagem"
            android:layout_marginHorizontal="16dp" />

        <!-- NOTIFICAÇÕES + BOLINHA -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iconMensagemCapsulasAdmSergio"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/email"
                android:layout_marginHorizontal="16dp" />

            <ImageView
                android:id="@+id/bolinhaBaixo"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/bola_notificacao"
                android:visibility="gone"
                android:layout_gravity="end|top"
                android:translationX="3dp"
                android:translationY="-3dp"/>
        </FrameLayout>

        <!-- MENU (ADM) -->
        <ImageView
            android:id="@+id/iconMenuInferiorCapsulasAdmSergio"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:tint="#FFFFFF"
            android:src="@drawable/menu_hamb"
            android:layout_marginHorizontal="16dp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#004AF7"
    tools:context=".FavoritosUsuarioActivity">

    <!-- Cabeçalho superior -->
    <ImageView
        android:id="@+id/lopesLogoUnifor32"
        android:layout_width="83dp"
        android:layout_height="74dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_unifor" />

    <TextView
        android:id="@+id/lopesNomeUnifor32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="56dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Unifor Biblifor"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/lopesLogoUnifor32"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Título -->
    <TextView
        android:id="@+id/lopesRenovacaoEmprestimo32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Favoritos"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/lopesLogoUnifor32"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- LISTA: 1 livro por linha -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvFavoritos"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="84dp"
        android:clipToPadding="false"
        android:overScrollMode="never"
        app:layout_constraintTop_toBottomOf="@id/lopesRenovacaoEmprestimo32"
        app:layout_constraintBottom_toTopOf="@id/barraPaginacaoFavoritos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Paginação: três botões brancos, números pretos -->
    <LinearLayout
        android:id="@+id/barraPaginacaoFavoritos"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/barraInferiorFavoritos">

        <Button
            android:id="@+id/btnPag1Favoritos"
            android:layout_width="40dp"
            android:layout_height="36dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_page_button_white"
            android:text="1"
            android:textColor="#000000"
            android:textColorLink="#FFFFFF"
            android:textSize="12sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnPag2Favoritos"
            android:layout_width="40dp"
            android:layout_height="36dp"
            android:text="2"
            android:textSize="12sp"
            android:textColor="#000000"
            android:background="@drawable/bg_page_button_white"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnPag3Favoritos"
            android:layout_width="40dp"
            android:layout_height="36dp"
            android:text="3"
            android:textSize="12sp"
            android:textColor="#000000"
            android:background="@drawable/bg_page_button_white" />
    </LinearLayout>

    <!-- BARRA INFERIOR (mantida conforme seu layout) -->
    <LinearLayout
        android:id="@+id/barraInferiorFavoritos"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@android:color/transparent"
        android:paddingBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/leoLogoHome3"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginHorizontal="20dp"
            android:tint="#FFFFFF"
            app:srcCompat="@drawable/home" />

        <ImageView
            android:id="@+id/leoImagemChatbot3"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginHorizontal="20dp"
            app:srcCompat="@drawable/chatbot_ema" />

        <ImageView
            android:id="@+id/leoImagemNotificacoes3"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginHorizontal="20dp"
            app:srcCompat="@drawable/email" />

        <ImageView
            android:id="@+id/leoImagemMenu3"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginHorizontal="20dp"
            android:tint="#FFFFFF"
            app:srcCompat="@drawable/menu_hamb" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

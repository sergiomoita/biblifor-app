<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#004AF7"
    android:animateLayoutChanges="true"
    tools:context=".FavoritosUsuarioActivity">

    <!-- Cabeçalho superior -->
    <ImageView
        android:id="@+id/lopesLogoUnifor32"
        android:layout_width="83dp"
        android:layout_height="74dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_unifor" />

    <TextView
        android:id="@+id/lopesNomeUnifor32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="56dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Unifor Biblifor"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/lopesLogoUnifor32"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Título + Lupa -->
    <TextView
        android:id="@+id/lopesRenovacaoEmprestimo32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Favoritos"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/lopesLogoUnifor32"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ivLupaFavoritos" />

    <ImageView
        android:id="@+id/ivLupaFavoritos"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="24dp"
        android:contentDescription="Buscar"
        android:clickable="true"
        android:focusable="true"
        app:srcCompat="@drawable/lupa_pesquisar"
        app:tint="#FFFFFF"
        app:layout_constraintTop_toTopOf="@id/lopesRenovacaoEmprestimo32"
        app:layout_constraintBottom_toBottomOf="@id/lopesRenovacaoEmprestimo32"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Barra de pesquisa -->
    <androidx.cardview.widget.CardView
        android:id="@+id/containerSearchFavoritos"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="20dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintTop_toBottomOf="@id/lopesRenovacaoEmprestimo32"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/etSearchFavoritos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:hint="Pesquisar nos favoritos"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:singleLine="true"
            android:imeOptions="actionSearch"
            android:textColor="#000000"
            android:textColorHint="#808080" />
    </androidx.cardview.widget.CardView>

    <!-- LISTA -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvFavoritos"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="84dp"
        android:clipToPadding="false"
        android:overScrollMode="never"
        app:layout_constraintTop_toBottomOf="@id/containerSearchFavoritos"
        app:layout_constraintBottom_toTopOf="@id/barraPaginacaoFavoritos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Paginação ajustada: < 1 > -->
    <LinearLayout
        android:id="@+id/barraPaginacaoFavoritos"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/barraInferiorFavoritos">

        <!-- Botão voltar (<) -->
        <TextView
            android:id="@+id/btnPag1Favoritos"
            android:layout_width="40dp"
            android:layout_height="36dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_page_button_white"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:text="&lt;"
            android:textColor="#000000"
            android:textSize="16sp" />

        <!-- Número atual (dinâmico) -->
        <TextView
            android:id="@+id/btnPag2Favoritos"
            android:layout_width="40dp"
            android:layout_height="36dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_page_button_white"
            android:gravity="center"
            android:clickable="false"
            android:focusable="false"
            android:text="1"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="16sp" />

        <!-- Botão avançar (>) -->
        <TextView
            android:id="@+id/btnPag3Favoritos"
            android:layout_width="40dp"
            android:layout_height="36dp"
            android:background="@drawable/bg_page_button_white"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:text="&gt;"
            android:textColor="#000000"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- BARRA INFERIOR -->
    <LinearLayout
        android:id="@+id/barraInferiorFavoritos"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@android:color/transparent"
        android:paddingBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/leoLogoHome3"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginHorizontal="20dp"
            android:tint="#FFFFFF"
            app:srcCompat="@drawable/home" />

        <ImageView
            android:id="@+id/leoImagemChatbot3"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginHorizontal="20dp"
            app:srcCompat="@drawable/chatbot_ema" />

        <ImageView
            android:id="@+id/leoImagemNotificacoes3"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginHorizontal="20dp"
            app:srcCompat="@drawable/email" />

        <ImageView
            android:id="@+id/leoImagemMenu3"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginHorizontal="20dp"
            android:tint="#FFFFFF"
            app:srcCompat="@drawable/menu_hamb" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

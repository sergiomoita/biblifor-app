<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A3FCC"
    tools:context=".PopupLivroOnlineUsuarioActivity">

    <!-- Botão de Voltar -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/btnVoltarPopupLivroOnlineUsuarioSergio"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="16dp"
            android:layout_marginStart="8dp"
            android:contentDescription="Voltar"
            android:src="@drawable/seta"
            android:tint="#FFFFFF"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless" />
    </RelativeLayout>

    <!-- CARD CENTRAL -->
    <LinearLayout
        android:id="@+id/cardContainerPopupLivroOnlineUsuarioSergio"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_card"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Capa -->
        <ImageView
            android:id="@+id/imgCapaPopupLivroOnlineUsuarioSergio"
            android:layout_width="130dp"
            android:layout_height="190dp"
            android:layout_marginBottom="8dp"
            android:contentDescription="Capa do livro"
            android:src="@drawable/livro_romeu1" />

        <!-- Avaliação -->
        <RatingBar
            android:id="@+id/ratingPopupLivroOnlineUsuarioSergio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:isIndicator="true"
            android:numStars="5"
            android:progressTint="#FFD700"
            android:rating="5.0"
            android:scaleX="0.9"
            android:scaleY="0.9"
            android:stepSize="0.5" />

        <!-- Título -->
        <TextView
            android:id="@+id/txtTituloPopupLivroOnlineUsuarioSergio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:gravity="center"
            android:text="Romeu e Julieta - W. Carrasco"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Status -->
        <TextView
            android:id="@+id/txtStatusPopupLivroOnlineUsuarioSergio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:text="Disponível em versão digital."
            android:textColor="#00C853"
            android:textSize="14sp" />

        <!-- Botão Online -->
        <Button
            android:id="@+id/btnOnlinePopupLivroOnlineUsuarioSergio"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:backgroundTint="#FFFFFF"
            android:text="Online"
            android:textColor="#000000"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Barra inferior padronizada -->
    <LinearLayout
        android:id="@+id/barraInferiorPopupLivroOnlineUsuarioSergio"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="#0A3FCC"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="32dp"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/iconHomePopupLivroOnlineUsuarioSergio"
            android:layout_width="57dp"
            android:layout_height="55dp"
            android:src="@drawable/home"
            android:tint="#FFFFFF"
            android:layout_marginHorizontal="16dp" />

        <ImageView
            android:id="@+id/iconChatBotPopupLivroOnlineUsuarioSergio"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/chatbot_ema"
            android:layout_marginHorizontal="16dp" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iconMensagemPopupLivroOnlineUsuarioSergio"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/email"
                android:layout_marginHorizontal="16dp" />

            <ImageView
                android:id="@+id/bolinhaBaixo"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/bola_notificacao"
                android:visibility="gone"
                android:layout_gravity="end|top"
                android:translationX="3dp"
                android:translationY="-3dp"/>
        </FrameLayout>

        <ImageView
            android:id="@+id/iconMenuPopupLivroOnlineUsuarioSergio"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/menu_hamb"
            android:tint="#FFFFFF"
            android:layout_marginHorizontal="16dp" />

    </LinearLayout>


</RelativeLayout>

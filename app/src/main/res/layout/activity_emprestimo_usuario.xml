<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#004AF7">

    <!-- ========== CABEÇALHO PADRONIZADO ========== -->

    <ImageView
        android:id="@+id/lopesLogoUnifor23"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/logo_unifor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lopesNomeUnifor23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unifor Biblifor"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:fontFamily="@font/poppins_semibold"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@id/lopesLogoUnifor23"
        app:layout_constraintTop_toTopOf="@id/lopesLogoUnifor23"
        app:layout_constraintBottom_toBottomOf="@id/lopesLogoUnifor23" />

    <ImageView
        android:id="@+id/lopesNotificacao23"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:src="@drawable/notificacao"
        android:tint="#FFFFFF"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/lopesLogoUnifor23"
        app:layout_constraintBottom_toBottomOf="@id/lopesLogoUnifor23" />

    <ImageView
        android:id="@+id/lopesChatBot23"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/chatbot_ema"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toStartOf="@id/lopesNotificacao23"
        app:layout_constraintTop_toTopOf="@id/lopesNotificacao23"
        app:layout_constraintBottom_toBottomOf="@id/lopesNotificacao23" />

    <!-- ========== TÍTULO ========== -->

    <TextView
        android:id="@+id/lopesEmprestimo23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Empréstimo"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:fontFamily="@font/poppins_semibold"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/lopesLogoUnifor23"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/lopesSetaVoltar23"
        android:layout_width="38dp"
        android:layout_height="28dp"
        android:src="@drawable/seta"
        android:tint="#FFFFFF"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lopesEmprestimo23" />

    <!-- ========== ÁREA DO LIVRO (mantida exatamente como estava) ========== -->

    <ImageView
        android:id="@+id/imgCapaEmprestimo"
        android:layout_width="135dp"
        android:layout_height="200dp"
        android:src="@drawable/livro_rachelqueiroz"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lopesSetaVoltar23" />

    <TextView
        android:id="@+id/txtTituloEmprestimo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Título do livro"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:fontFamily="@font/poppins_semibold"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintStart_toEndOf="@id/imgCapaEmprestimo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/imgCapaEmprestimo" />

    <TextView
        android:id="@+id/txtUnidadesEmprestimo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unidades disponíveis: 0"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:fontFamily="@font/poppins_semibold"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@id/txtTituloEmprestimo"
        app:layout_constraintTop_toBottomOf="@id/txtTituloEmprestimo" />

    <!-- ========== DATE PICKER ========== -->

    <TextView
        android:id="@+id/fieldDataDevolucao"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/bg_calendar_container"
        android:padding="14dp"
        android:text="Selecionar data de devolução"
        android:textColor="#000000"
        android:textSize="14sp"
        android:gravity="center_vertical"
        android:drawableEnd="@drawable/ic_calendar"
        android:drawablePadding="12dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgCapaEmprestimo" />

    <!-- ========== LISTA DE TERMOS (mantido como estava) ========== -->

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerTermos23"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:background="#FFFFFF"
        android:padding="12dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/fieldDataDevolucao"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ========== BOTÕES (mantidos) ========== -->

    <Button
        android:id="@+id/lopesBtnRecusar23"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:text="Recusar"
        android:textColor="#121212"
        android:backgroundTint="#F4F4F4"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/lopesBtnAceitar23"
        app:layout_constraintBottom_toTopOf="@id/bottomBar"
        android:layout_marginBottom="32dp" />

    <Button
        android:id="@+id/lopesBtnAceitar23"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:text="Aceitar"
        android:textColor="#121212"
        android:backgroundTint="#F4F4F4"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintStart_toEndOf="@id/lopesBtnRecusar23"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomBar"
        android:layout_marginBottom="32dp" />

    <!-- ========== BARRA INFERIOR PADRONIZADA ========== -->

    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:background="#004AF7"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/leoLogoHome3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:tint="#FFFFFF"
            android:src="@drawable/home"
            android:layout_marginHorizontal="16dp" />

        <ImageView
            android:id="@+id/leoImagemChatbot3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/chatbot_ema"
            android:layout_marginHorizontal="16dp" />

        <ImageView
            android:id="@+id/leoImagemNotificacoes3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/email"
            android:layout_marginHorizontal="16dp" />

        <ImageView
            android:id="@+id/leoImagemMenu3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:tint="#FFFFFF"
            android:src="@drawable/menu_hamb"
            android:layout_marginHorizontal="16dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#005BFF"
    tools:context=".PopupResultadosAdmActivity">

    <!-- BOTÃO VOLTAR -->
    <ImageView
        android:id="@+id/btnVoltarPopupResultadosAdm"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="9dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/seta"
        android:tint="#FFFFFF"
        android:background="?attr/selectableItemBackgroundBorderless" />

    <!-- CARD CENTRAL -->
    <LinearLayout
        android:id="@+id/cardContainerPopupResultadosAdm"
        android:layout_width="338dp"
        android:layout_height="515dp"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="16dp"
        android:background="@drawable/bg_card">

        <!-- CAPA DO LIVRO -->
        <ImageView
            android:id="@+id/imgCapaPopupResultadosAdm"
            android:layout_width="150dp"
            android:layout_height="220dp"
            android:layout_marginBottom="12dp"
            android:src="@drawable/livro_rachelqueiroz" />

        <!-- TÍTULO -->
        <TextView
            android:id="@+id/txtTituloPopupResultadosAdm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Título do Livro"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginBottom="6dp"
            android:gravity="center" />

        <!-- AUTOR -->
        <TextView
            android:id="@+id/txtAutorPopupResultadosAdm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Autor do Livro"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginBottom="8dp"
            android:gravity="center" />

        <!-- CÓDIGO DO ACERVO -->
        <TextView
            android:id="@+id/txtCodigoAcervoPopupResultadosAdm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Código do Acervo: QC-91"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_marginBottom="12dp"
            android:gravity="center" />

        <!-- SITUAÇÃO -->
        <TextView
            android:id="@+id/txtSituacaoPopupResultadosAdm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Situação: Emprestável"
            android:textSize="14sp"
            android:textColor="#00C853"
            android:layout_marginBottom="18dp"
            android:gravity="center" />

        <!-- BOTÃO EDITAR -->
        <Button
            android:id="@+id/btnEditarPopupResultadosAdm"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text="Editar Livro"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:backgroundTint="#002C9B" />

    </LinearLayout>

    <!-- BARRA INFERIOR (MESMA DO POPUP DO USUÁRIO) -->
    <LinearLayout
        android:id="@+id/barraInferiorPopupResultadosAdm"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#005BFF">

        <ImageView
            android:id="@+id/iconHomePopupResultadosAdm"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/home"
            android:tint="#FFFFFF"
            android:layout_marginHorizontal="20dp" />

        <ImageView
            android:id="@+id/iconChatBotPopupResultadosAdm"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/chatbot_ema"
            android:layout_marginHorizontal="20dp" />

        <ImageView
            android:id="@+id/iconMensagemPopupResultadosAdm"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/email"
            android:layout_marginHorizontal="20dp" />

        <ImageView
            android:id="@+id/iconMenuPopupResultadosAdm"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/menu_hamb"
            android:tint="#FFFFFF"
            android:layout_marginHorizontal="20dp" />

    </LinearLayout>

</RelativeLayout>

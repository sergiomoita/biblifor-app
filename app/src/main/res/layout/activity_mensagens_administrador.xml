<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A3FCC"
    tools:context=".MensagensAdministradorActivity">

    <!-- Foto de perfil -->
    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="53dp"
        android:layout_height="63dp"
        android:layout_marginTop="44dp"
        android:contentDescription="@string/app_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.075"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/foto_adm" />

    <!-- Nome -->
    <TextView
        android:id="@+id/textNomeAdministradorAvisos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Olá, Hugo Moura"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.314"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Matrícula -->
    <TextView
        android:id="@+id/textMatricula"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/poppins_semibold"
        android:text=""
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Nova Mensagem -->

    <TextView
        android:id="@+id/textNovaMensagem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="132dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Nova Mensagem"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.136"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iconNovaMensagem"
        android:layout_width="38dp"
        android:layout_height="31dp"
        android:layout_marginTop="132dp"
        android:tint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.53"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/escrever_mensagem" />

    <!-- Título -->
    <TextView
        android:id="@+id/textAvisos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="192dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Eventos"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Lista de eventos (reaproveitando AvisoAdapter) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvEventosAdmin"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        app:layout_constraintTop_toBottomOf="@id/textAvisos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/barraInferiorCapsulasAdmSergio" />

    <!-- Barra inferior fixa padronizada ADM -->
    <LinearLayout
        android:id="@+id/barraInferiorCapsulasAdmSergio"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="#0A3FCC"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- HOME (ADM) -->
        <ImageView
            android:id="@+id/iconHomeCapsulasAdmSergio"
            android:layout_width="57dp"
            android:layout_height="55dp"
            android:src="@drawable/home"
            android:tint="#FFFFFF"
            android:layout_marginHorizontal="16dp" />

        <!-- ESCREVER MENSAGEM (ADM) -->
        <ImageView
            android:id="@+id/iconEscreverMsgCapsulasAdmSergio"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/escrever_mensagem"
            android:tint="#FFFFFF"
            android:layout_marginHorizontal="16dp" />

        <!-- NOTIFICAÇÕES (ADM) + BOLINHA -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iconMensagemCapsulasAdmSergio"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/email"
                android:layout_marginHorizontal="16dp" />

            <ImageView
                android:id="@+id/bolinhaBaixo"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/bola_notificacao"
                android:visibility="gone"
                android:layout_gravity="end|top"
                android:translationX="3dp"
                android:translationY="-3dp"/>
        </FrameLayout>

        <!-- MENU (ADM) -->
        <ImageView
            android:id="@+id/iconMenuInferiorCapsulasAdmSergio"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/menu_hamb"
            android:tint="#FFFFFF"
            android:layout_marginHorizontal="16dp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A3FCC"
    android:clickable="true"
    android:focusable="true"
    tools:context=".PopupResultadosAdministradorActivity">

    <!-- BOTÃO VOLTAR -->
    <ImageView
        android:id="@+id/btnVoltarPopupAdm"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="9dp"
        android:layout_marginTop="30dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Voltar"
        android:src="@drawable/seta"
        android:tint="#FFFFFF" />

    <!-- CARD CENTRAL -->
    <LinearLayout
        android:id="@+id/cardContainerPopupAdm"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_card"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- CAPA DO LIVRO -->
        <ImageView
            android:id="@+id/imgCapaPopupAdm"
            android:layout_width="150dp"
            android:layout_height="220dp"
            android:layout_marginBottom="12dp"
            android:contentDescription="Capa do livro"
            android:src="@drawable/livro_rachelqueiroz" />

        <!-- TÍTULO -->
        <TextView
            android:id="@+id/txtTituloPopupAdm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:gravity="center"
            android:text="Título do Livro"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- STATUS -->
        <TextView
            android:id="@+id/txtStatusPopupAdm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:gravity="center"
            android:text="Disponível"
            android:textColor="#00C853"
            android:textSize="14sp" />

        <!-- BOTÃO EDITAR LIVRO -->
        <!-- BOTÕES LADO A LADO -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="18dp">

            <Button
                android:id="@+id/btnEditarLivroPopupAdm"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Editar Livro"
                android:backgroundTint="#002C9B"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:paddingHorizontal="20dp"/>

            <Button
                android:id="@+id/btnDeletarLivroPopupAdm"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Excluir"
                android:backgroundTint="#D50000"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:paddingHorizontal="20dp"/>
        </LinearLayout>

    </LinearLayout>

    <!-- BARRA INFERIOR PADRONIZADA ADM -->
    <LinearLayout
        android:id="@+id/barraInferiorPopupAdm"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#0A3FCC"
        android:paddingHorizontal="32dp"
        android:layout_alignParentBottom="true">

        <!-- HOME (ADM) -->
        <ImageView
            android:id="@+id/iconHomePopupAdm"
            android:layout_width="57dp"
            android:layout_height="55dp"
            android:tint="#FFFFFF"
            android:src="@drawable/home"
            android:layout_marginHorizontal="16dp" />

        <!-- ESCREVER (ADM) -->
        <ImageView
            android:id="@+id/iconEscreverMensagemPopupAdm"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:tint="#FFFFFF"
            android:src="@drawable/escrever_mensagem"
            android:layout_marginHorizontal="16dp" />

        <!-- NOTIFICAÇÕES + BOLINHA -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iconMensagemPopupAdm"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/email"
                android:layout_marginHorizontal="16dp" />

            <ImageView
                android:id="@+id/bolinhaBaixo"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/bola_notificacao"
                android:visibility="gone"
                android:layout_gravity="end|top"
                android:translationX="3dp"
                android:translationY="-3dp"/>
        </FrameLayout>

        <!-- MENU (ADM) -->
        <ImageView
            android:id="@+id/iconMenuPopupAdm"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:tint="#FFFFFF"
            android:src="@drawable/menu_hamb"
            android:layout_marginHorizontal="16dp" />

    </LinearLayout>

</RelativeLayout>

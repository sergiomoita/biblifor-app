<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#004AF7">

    <!-- ========== BARRA SUPERIOR ========== -->

    <ImageView
        android:id="@+id/logoUnifor"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:src="@drawable/logo_unifor"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nomeUnifor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unifor Biblifor"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:fontFamily="@font/poppins_semibold"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@id/logoUnifor"
        app:layout_constraintTop_toTopOf="@id/logoUnifor"
        app:layout_constraintBottom_toBottomOf="@id/logoUnifor" />

    <ImageView
        android:id="@+id/iconNotificacao"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:src="@drawable/notificacao"
        android:tint="#FFFFFF"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/logoUnifor"
        app:layout_constraintBottom_toBottomOf="@id/logoUnifor" />

    <ImageView
        android:id="@+id/iconChatbot"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/chatbot_ema"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toStartOf="@id/iconNotificacao"
        app:layout_constraintTop_toTopOf="@id/iconNotificacao"
        app:layout_constraintBottom_toBottomOf="@id/iconNotificacao" />

    <!-- ========== TÍTULO ========== -->

    <TextView
        android:id="@+id/tituloConfirmacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Empréstimo Confirmado"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:fontFamily="@font/poppins_semibold"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/logoUnifor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ========== CAPA DO LIVRO ========== -->

    <ImageView
        android:id="@+id/imgCapaConfirmacao"
        android:layout_width="210dp"
        android:layout_height="300dp"
        android:src="@drawable/livro_guerra_e_paz"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tituloConfirmacao"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ========== LOCALIZAÇÃO ========== -->

    <TextView
        android:id="@+id/labelLocalizacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Localização no acervo:"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:fontFamily="@font/poppins_semibold"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/imgCapaConfirmacao"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/txtLocalizacao"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:paddingHorizontal="20dp"
        android:gravity="center"
        android:text="QC-91"
        android:textColor="#000000"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="16sp"
        android:background="@drawable/bg_white_rounded"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/labelLocalizacao"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ========== BOTÃO HISTÓRICO ========== -->

    <Button
        android:id="@+id/btnIrHistorico"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="Ver Histórico de Empréstimos"
        android:textColor="#000000"
        android:backgroundTint="#FFFFFF"
        android:fontFamily="@font/poppins_semibold"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@id/txtLocalizacao"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ========== BARRA INFERIOR (MODELO EXATO ENVIADO) ========== -->

    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:background="#004AF7"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/leoLogoHome3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:tint="#FFFFFF"
            android:src="@drawable/home"
            android:layout_marginHorizontal="16dp" />

        <ImageView
            android:id="@+id/leoImagemChatbot3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/chatbot_ema"
            android:layout_marginHorizontal="16dp" />

        <ImageView
            android:id="@+id/leoImagemNotificacoes3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/email"
            android:layout_marginHorizontal="16dp" />

        <ImageView
            android:id="@+id/leoImagemMenu3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:tint="#FFFFFF"
            android:src="@drawable/menu_hamb"
            android:layout_marginHorizontal="16dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

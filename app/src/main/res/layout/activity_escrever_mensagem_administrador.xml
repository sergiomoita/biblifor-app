<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A3FCC"
    android:orientation="vertical">

    <!-- Barra superior -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">



        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/btnVoltarEscreverMensagemAdministradorSergio"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/seta"
                android:tint="@android:color/white" />
        </LinearLayout>

    </LinearLayout>

    <!-- Título -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nova Mensagem"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp" />

    <!-- Card principal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:layout_margin="16dp"
        android:padding="16dp"
        android:elevation="4dp"
        android:gravity="top">

        <!-- Campo destinatários -->
        <EditText
            android:id="@+id/etDestinatariosEscreverMensagemAdministradorSergio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Matrícula do destinatário"
            android:background="@drawable/bg_edittext"
            android:padding="12dp"
            android:textColor="#000"
            android:textColorHint="#888"
            android:layout_marginBottom="12dp" />

        <!-- ✅ NOVO CAMPO: Título -->
        <EditText
            android:id="@+id/etTituloEscreverMensagemAdministradorSergio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Título"
            android:background="@drawable/bg_edittext"
            android:padding="12dp"
            android:textColor="#000"
            android:textColorHint="#888"
            android:layout_marginBottom="12dp" />

        <!-- Campo de conteúdo -->
        <EditText
            android:id="@+id/etAssuntoEscreverMensagemAdministradorSergio"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:hint="Mensagem"
            android:background="@drawable/bg_edittext"
            android:padding="12dp"
            android:gravity="top|start"
            android:textColor="#000"
            android:textColorHint="#888"
            android:inputType="textMultiLine"
            android:minLines="8" />

        <!-- Botão enviar (alinhado à direita) -->
        <Button
            android:id="@+id/btnEnviarEscreverMensagemAdministradorSergio"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginTop="24dp"
            android:layout_gravity="end"
            android:backgroundTint="#004070"
            android:text="Enviar"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium" />
    </LinearLayout>

    <!-- Barra inferior padronizada ADM -->
    <LinearLayout
        android:id="@+id/barraInferiorEscreverMensagemAdministradorSergio"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="#0A3FCC"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="32dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- HOME (ADM) -->
        <ImageView
            android:id="@+id/iconHomeEscreverMensagemAdministradorSergio"
            android:layout_width="57dp"
            android:layout_height="55dp"
            android:tint="#FFFFFF"
            android:src="@drawable/home"
            android:layout_marginHorizontal="16dp" />

        <!-- ESCREVER (ADM) -->
        <ImageView
            android:id="@+id/iconEscreverEscreverMensagemAdministradorSergio"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:tint="#FFFFFF"
            android:src="@drawable/escrever_mensagem"
            android:layout_marginHorizontal="16dp" />

        <!-- NOTIFICAÇÕES + BOLINHA -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iconMensagemEscreverMensagemAdministradorSergio"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/email"
                android:layout_marginHorizontal="16dp" />

            <ImageView
                android:id="@+id/bolinhaBaixo"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/bola_notificacao"
                android:visibility="gone"
                android:layout_gravity="end|top"
                android:translationX="3dp"
                android:translationY="-3dp"/>
        </FrameLayout>

        <!-- MENU (ADM) -->
        <ImageView
            android:id="@+id/iconMenuInferiorEscreverMensagemAdministradorSergio"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:tint="#FFFFFF"
            android:src="@drawable/menu_hamb"
            android:layout_marginHorizontal="16dp" />

    </LinearLayout>


</LinearLayout>

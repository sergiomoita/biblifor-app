<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#005BFF"
    android:animateLayoutChanges="true"
    tools:context=".LivrosEmprestaveisAdministradorActivity">

    <!-- LOGO -->
    <ImageView
        android:id="@+id/leoLogoUniforPU5"
        android:layout_width="90dp"
        android:layout_height="62dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/leotextViewUniforPU5"
        app:srcCompat="@drawable/logo_unifor" />

    <TextView
        android:id="@+id/leotextViewUniforPU5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="28dp"
        android:fontFamily="sans-serif"
        android:text="Unifor Biblifor"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/leoLogoUniforPU5"
        app:layout_constraintTop_toTopOf="@id/leoLogoUniforPU5" />

    <!-- Seta voltar -->
    <ImageView
        android:id="@+id/leoImagemSetaPU5"
        android:layout_width="34dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:tint="#FFFFFF"
        app:srcCompat="@drawable/seta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/leoLogoUniforPU5" />

    <!-- Título + Lupa -->
    <TextView
        android:id="@+id/lopesEmprestar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Emprestar"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@id/leoImagemSetaPU5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ivLupaLivrosEmprestaveis" />

    <ImageView
        android:id="@+id/ivLupaLivrosEmprestaveis"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="24dp"
        android:contentDescription="Buscar"
        android:clickable="true"
        android:focusable="true"
        app:srcCompat="@drawable/lupa_pesquisar"
        app:layout_constraintTop_toTopOf="@id/lopesEmprestar"
        app:layout_constraintBottom_toBottomOf="@id/lopesEmprestar"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Barra de pesquisa (escondida) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/containerSearchLivrosEmprestaveis"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="20dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintTop_toBottomOf="@id/lopesEmprestar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/etSearchLivrosEmprestaveis"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:hint="Pesquisar livros emprestáveis"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:singleLine="true"
            android:imeOptions="actionSearch"
            android:textColor="#000000"
            android:textColorHint="#808080" />
    </androidx.cardview.widget.CardView>

    <!-- Subtítulo -->
    <TextView
        android:id="@+id/lopesDefina"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Defina quais livros físicos possam ser emprestados."
        android:textColor="#FFFFFF"
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@id/containerSearchLivrosEmprestaveis"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvLivros"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:clipToPadding="false"
        android:overScrollMode="never"
        app:layout_constraintTop_toBottomOf="@id/lopesDefina"
        app:layout_constraintBottom_toTopOf="@id/barraPaginacaoLivrosEmp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Paginação: < 1 > -->
    <LinearLayout
        android:id="@+id/barraPaginacaoLivrosEmp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/barraInferiorCapsulasAdmSergio">

        <TextView
            android:id="@+id/btnPagPrevLivrosEmp"
            android:layout_width="40dp"
            android:layout_height="36dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_page_button_white"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:text="&lt;"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/btnPagCenterLivrosEmp"
            android:layout_width="40dp"
            android:layout_height="36dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_page_button_white"
            android:gravity="center"
            android:clickable="false"
            android:focusable="false"
            android:text="1"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/btnPagNextLivrosEmp"
            android:layout_width="40dp"
            android:layout_height="36dp"
            android:background="@drawable/bg_page_button_white"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:text="&gt;"
            android:textColor="#000000"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Barra inferior -->
    <LinearLayout
        android:id="@+id/barraInferiorCapsulasAdmSergio"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/iconHomeCapsulasAdmSergio"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginHorizontal="20dp"
            android:contentDescription="Home"
            android:src="@drawable/home"
            android:tint="#FFFFFF" />

        <ImageView
            android:id="@+id/iconEscreverMsgCapsulasAdmSergio"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginHorizontal="20dp"
            android:contentDescription="EnviarMsg"
            android:src="@drawable/escrever_mensagem"
            android:tint="#FFFFFF" />

        <ImageView
            android:id="@+id/iconMensagemCapsulasAdmSergio"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginHorizontal="20dp"
            android:contentDescription="Mensagem"
            android:src="@drawable/email" />

        <ImageView
            android:id="@+id/iconMenuInferiorCapsulasAdmSergio"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginHorizontal="20dp"
            android:contentDescription="Menu"
            android:src="@drawable/menu_hamb"
            android:tint="#FFFFFF" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

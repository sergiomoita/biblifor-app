<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#005BFF"
    tools:context=".MensagemSemResultadoUsuarioActivity">

    <!-- Ícone de voltar -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <!-- Botão voltar -->
        <ImageView
            android:id="@+id/btnVoltarMensagemSemResultadoUsuarioSergio"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentStart="true"
            android:contentDescription="Voltar"
            android:src="@drawable/seta"
            android:tint="#FFFFFF"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <!-- Ícones EMA e Notificação à direita -->
        <LinearLayout
            android:id="@+id/linhaIconesDireita"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:gravity="end|center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iconMascoteMensagemSemResultadoUsuarioSergio"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:contentDescription="Ícone mascote"
                android:src="@drawable/chatbot_ema"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"/>

            <ImageView
                android:id="@+id/iconNotificacaoMensagemSemResultadoUsuarioSergio"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="Ícone notificação"
                android:src="@drawable/notificacao"
                android:tint="#FFFFFF"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"/>
        </LinearLayout>
    </RelativeLayout>

    <!-- Barra de pesquisa -->
    <LinearLayout
        android:id="@+id/barraPesquisaMensagemSemResultadoUsuarioSergio"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="70dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_pesquisa"
        android:gravity="center_vertical"
        android:paddingHorizontal="12dp">

        <EditText
            android:id="@+id/editPesquisaMensagemSemResultadoUsuarioSergio"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="Pesquisar material de leitura..."
            android:background="@null"
            android:textColor="#000000"
            android:textColorHint="#666666"
            android:paddingStart="8dp"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iconLupaMensagemSemResultadoUsuarioSergio"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/lupa_pesquisar"
            android:contentDescription="Pesquisar" />
    </LinearLayout>

    <!-- Texto "Nenhum resultado" -->
    <TextView
        android:id="@+id/tvNenhumResultadoMensagemSemResultadoUsuarioSergio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/barraPesquisaMensagemSemResultadoUsuarioSergio"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text='Nenhum resultado para:'
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textStyle="bold" />

    <!-- Texto do termo pesquisado -->
    <TextView
        android:id="@+id/tvTermoPesquisadoMensagemSemResultadoUsuarioSergio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvNenhumResultadoMensagemSemResultadoUsuarioSergio"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp"
        android:text='"laranjeira"'
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Mascote central -->
    <ImageView
        android:id="@+id/imgMascoteMensagemSemResultadoUsuarioSergio"
        android:layout_width="300dp"
        android:layout_height="320dp"
        android:layout_below="@id/tvTermoPesquisadoMensagemSemResultadoUsuarioSergio"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:src="@drawable/ema_lupa"
        android:contentDescription="Mascote procurando resultado" />

    <!-- Texto inferior -->
    <TextView
        android:id="@+id/tvMensagemFinalMensagemSemResultadoUsuarioSergio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgMascoteMensagemSemResultadoUsuarioSergio"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Por favor pesquise novamente."
        android:textColor="#FFFFFF"
        android:textSize="21sp" />

    <!-- Barra inferior -->
    <LinearLayout
        android:id="@+id/barraInferiorMensagemSemResultadoUsuarioSergio"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/iconHomeMensagemSemResultadoUsuarioSergio"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginHorizontal="20dp"
            android:src="@drawable/home"
            android:tint="#FFFFFF"
            android:contentDescription="Home" />

        <ImageView
            android:id="@+id/iconChatBotMensagemSemResultadoUsuarioSergio"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginHorizontal="20dp"
            android:src="@drawable/chatbot_ema"
            android:contentDescription="Mascote" />

        <ImageView
            android:id="@+id/iconMensagemMensagemSemResultadoUsuarioSergio"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginHorizontal="20dp"
            android:src="@drawable/email"
            android:contentDescription="Mensagem" />

        <ImageView
            android:id="@+id/iconMenuMensagemSemResultadoUsuarioSergio"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginHorizontal="20dp"
            android:src="@drawable/menu_hamb"
            android:tint="#FFFFFF"
            android:contentDescription="Menu" />
    </LinearLayout>

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A3FCC"
    tools:context=".PerfilUsuarioActivity">

    <!-- LOGO -->
    <ImageView
        android:id="@+id/leoLogoUniforPU5"
        android:layout_width="90dp"
        android:layout_height="62dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/logo_unifor" />

    <TextView
        android:id="@+id/leotextViewUniforPU5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unifor Biblifor"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/leoLogoUniforPU5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ÍCONE VOLTAR -->
    <ImageView
        android:id="@+id/leoImagemSetaPU5"
        android:layout_width="34dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:tint="#FFFFFF"
        app:srcCompat="@drawable/seta"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- ÍCONE NOTIFICAÇÃO -->
    <ImageView
        android:id="@+id/leoImagemNotificacaoSuperiorPU5"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="40dp"
        android:tint="#FFFFFF"
        app:srcCompat="@drawable/notificacao"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <!-- FOTO PERFIL -->
    <ImageView
        android:id="@+id/leoFotoPerfilUsuarioPU5"
        android:layout_width="118dp"
        android:layout_height="112dp"
        android:layout_marginTop="152dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:srcCompat="@drawable/foto_user" />

    <!-- BOTÃO EDITAR FOTO -->
    <ImageView
        android:id="@+id/leoBotaoEditarFotoPerfilNew"
        android:layout_width="32dp"
        android:layout_height="28dp"
        android:layout_marginTop="236dp"
        android:layout_marginEnd="148dp"
        android:tint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/editar" />
    <!-- NOME EXIBIDO -->
    <TextView
        android:id="@+id/leoNomeUserPU5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Maria Luísa"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/leoBotaoEditarFotoPerfilNew"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- MATRÍCULA -->
    <TextView
        android:id="@+id/leoMatriculaUserPU5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2120347"
        android:textColor="#EAEAEA"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/leoNomeUserPU5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <!-- ================================ -->
    <!--  NOVOS CARDS MODERNOS - NOME     -->
    <!-- ================================ -->

    <LinearLayout
        android:id="@+id/cardNomePU5"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_card_moderno"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@id/leoMatriculaUserPU5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tituloNomePU5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome"
            android:textColor="#A5B4FF"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/valorNomePU5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Maria Luísa"
            android:textColor="#FFFFFF"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_marginTop="4dp" />

    </LinearLayout>


    <!-- ================================ -->
    <!--  NOVO CARD MODERNO - CURSO       -->
    <!-- ================================ -->

    <LinearLayout
        android:id="@+id/cardCursoPU5"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_card_moderno"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@id/cardNomePU5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tituloCursoPU5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Curso"
            android:textColor="#A5B4FF"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/valorCursoPU5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ciência da Computação"
            android:textColor="#FFFFFF"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_marginTop="4dp" />

    </LinearLayout>


    <!-- TÍTULO HISTÓRICO -->
    <TextView
        android:id="@+id/leoTituloHistoricoEmprestimoPU5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Histórico de Empréstimos"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/cardCursoPU5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- RECYCLER VIEW HISTÓRICO -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerHistorico5"
        android:layout_width="330dp"
        android:layout_height="195dp"
        android:padding="8dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/leoTituloHistoricoEmprestimoPU5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- BARRA INFERIOR PADRONIZADA -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="#0A3FCC"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="32dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/leoLogoHome3"
            android:layout_width="57dp"
            android:layout_height="55dp"
            android:tint="#FFFFFF"
            android:src="@drawable/home"
            android:layout_marginHorizontal="16dp" />

        <ImageView
            android:id="@+id/leoImagemChatbot3"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/chatbot_ema"
            android:layout_marginHorizontal="16dp" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/leoImagemNotificacoes3"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/email"
                android:layout_marginHorizontal="16dp" />

            <ImageView
                android:id="@+id/bolinhaBaixo"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/bola_notificacao"
                android:visibility="gone"
                android:layout_gravity="end|top"
                android:translationX="3dp"
                android:translationY="-3dp"/>
        </FrameLayout>

        <ImageView
            android:id="@+id/leoImagemMenu3"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:tint="#FFFFFF"
            android:src="@drawable/menu_hamb"
            android:layout_marginHorizontal="16dp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

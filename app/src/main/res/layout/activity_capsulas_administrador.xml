                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alignmentMode="alignMargins"
                    android:columnCount="2"
                    android:gravity="center"
                    android:useDefaultMargins="true">

                    <!-- CÁPSULA 1 -->

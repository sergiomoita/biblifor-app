<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#004AF7"
    tools:context=".RecomendadosUsuarioActivity">

    <!-- LOGO + TEXTO UNIFOR BIBLIFOR -->
    <LinearLayout
        android:id="@+id/containerLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/leoLogoUniforPU5"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/logo_unifor" />

        <TextView
            android:id="@+id/leotextViewUniforPU5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Unifor Biblifor"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- SETA DE VOLTAR ABAIXO DO LOGO -->
    <ImageView
        android:id="@+id/btnVoltarRecomendados"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:contentDescription="Voltar"
        android:src="@drawable/seta"
        android:tint="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/containerLogo"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- TÍTULO PRINCIPAL -->
    <TextView
        android:id="@+id/lopesRecomendados"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Recomendados"
        android:textColor="#FFFFFF"
        android:textSize="26sp"
        app:layout_constraintTop_toBottomOf="@id/btnVoltarRecomendados"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- SUBTÍTULO -->
    <TextView
        android:id="@+id/lopesComBase"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Com base no que você favoritou recentemente."
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/lopesRecomendados"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- LISTA (RecyclerView) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvRecomendados"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:clipToPadding="false"
        android:overScrollMode="never"
        android:paddingBottom="96dp"
        app:layout_constraintTop_toBottomOf="@id/lopesComBase"
        app:layout_constraintBottom_toTopOf="@id/bottomBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- BARRA INFERIOR FIXA -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="#004AF7"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="32dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/leoLogoHome3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:tint="#FFFFFF"
            android:src="@drawable/home"
            android:layout_marginHorizontal="16dp" />

        <ImageView
            android:id="@+id/leoImagemChatbot3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/chatbot_ema"
            android:layout_marginHorizontal="16dp" />

        <ImageView
            android:id="@+id/leoImagemNotificacoes3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/email"
            android:layout_marginHorizontal="16dp" />

        <ImageView
            android:id="@+id/leoImagemMenu3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:tint="#FFFFFF"
            android:src="@drawable/menu_hamb"
            android:layout_marginHorizontal="16dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A3FCC"
    android:animateLayoutChanges="true"
    tools:context=".RecomendadosUsuarioActivity">

    <!-- LOGO + TEXTO UNIFOR BIBLIFOR -->
    <LinearLayout
        android:id="@+id/containerLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/leoLogoUniforPU5"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/logo_unifor" />

        <TextView
            android:id="@+id/leotextViewUniforPU5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Unifor Biblifor"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- SETA DE VOLTAR -->
    <ImageView
        android:id="@+id/btnVoltarRecomendados"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:contentDescription="Voltar"
        android:src="@drawable/seta"
        android:tint="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/containerLogo"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- TÍTULO + LUPA -->
    <TextView
        android:id="@+id/lopesRecomendados"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Recomendados"
        android:textColor="#FFFFFF"
        android:textSize="26sp"
        app:layout_constraintTop_toBottomOf="@id/btnVoltarRecomendados"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ivLupaRecomendados" />

    <ImageView
        android:id="@+id/ivLupaRecomendados"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="24dp"
        android:contentDescription="Buscar"
        android:clickable="true"
        android:focusable="true"
        app:srcCompat="@drawable/lupa_pesquisar"
        app:layout_constraintTop_toTopOf="@id/lopesRecomendados"
        app:layout_constraintBottom_toBottomOf="@id/lopesRecomendados"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- SUBTÍTULO -->
    <TextView
        android:id="@+id/lopesComBase"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Com base no que você favoritou recentemente."
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/lopesRecomendados"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Barra de pesquisa -->
    <androidx.cardview.widget.CardView
        android:id="@+id/containerSearchRecomendados"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="20dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintTop_toBottomOf="@id/lopesComBase"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/etSearchRecomendados"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:hint="Pesquisar nos recomendados"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:singleLine="true"
            android:imeOptions="actionSearch"
            android:textColor="#000000"
            android:textColorHint="#808080" />
    </androidx.cardview.widget.CardView>

    <!-- LISTA -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvRecomendados"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:clipToPadding="false"
        android:overScrollMode="never"
        android:paddingBottom="96dp"
        app:layout_constraintTop_toBottomOf="@id/containerSearchRecomendados"
        app:layout_constraintBottom_toTopOf="@id/barraPaginacaoRecomendados"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Paginação < 1 > -->
    <LinearLayout
        android:id="@+id/barraPaginacaoRecomendados"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomBar">

        <TextView
            android:id="@+id/btnPag1Recomendados"
            android:layout_width="40dp"
            android:layout_height="36dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_page_button_white"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:text="&lt;"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/btnPag2Recomendados"
            android:layout_width="40dp"
            android:layout_height="36dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_page_button_white"
            android:gravity="center"
            android:clickable="false"
            android:focusable="false"
            android:text="1"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/btnPag3Recomendados"
            android:layout_width="40dp"
            android:layout_height="36dp"
            android:background="@drawable/bg_page_button_white"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:text="&gt;"
            android:textColor="#000000"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- BARRA INFERIOR PADRONIZADA -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="#0A3FCC"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="32dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/leoLogoHome3"
            android:layout_width="57dp"
            android:layout_height="55dp"
            android:tint="#FFFFFF"
            android:src="@drawable/home"
            android:layout_marginHorizontal="16dp" />

        <ImageView
            android:id="@+id/leoImagemChatbot3"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/chatbot_ema"
            android:layout_marginHorizontal="16dp" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/leoImagemNotificacoes3"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/email"
                android:layout_marginHorizontal="16dp" />

            <ImageView
                android:id="@+id/bolinhaBaixo"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/bola_notificacao"
                android:visibility="gone"
                android:layout_gravity="end|top"
                android:translationX="3dp"
                android:translationY="-3dp"/>
        </FrameLayout>

        <ImageView
            android:id="@+id/leoImagemMenu3"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:tint="#FFFFFF"
            android:src="@drawable/menu_hamb"
            android:layout_marginHorizontal="16dp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

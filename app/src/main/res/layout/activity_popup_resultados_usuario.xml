<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#005BFF"
    tools:context=".PopupResultadosUsuarioActivity">

    <!-- BOTÃO VOLTAR -->
    <ImageView
        android:id="@+id/btnVoltarPopupResultadosUsuarioSergio"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/seta"
        android:tint="#FFFFFF"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Voltar" />

    <!-- CARD CENTRAL -->
    <LinearLayout
        android:id="@+id/cardContainerPopupResultadosUsuario"
        android:layout_width="295dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_card"
        android:padding="16dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <!-- CAPA DO LIVRO -->
        <ImageView
            android:id="@+id/imgCapaPopupResultadosUsuario"
            android:layout_width="150dp"
            android:layout_height="220dp"
            android:layout_marginBottom="12dp"
            android:contentDescription="Capa do livro"
            android:src="@drawable/livro_rachelqueiroz" />

        <!-- BOTÃO DE FAVORITAR CENTRALIZADO -->
        <ImageView
            android:id="@+id/iconFavoritoPopupResultadosUsuario"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="12dp"
            android:src="@drawable/desfavoritado"
            android:tint="#FFC107"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Favoritar" />

        <!-- NOME DO LIVRO -->
        <TextView
            android:id="@+id/txtTituloPopupResultadosUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Título do Livro"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginBottom="6dp"/>

        <!-- STATUS -->
        <TextView
            android:id="@+id/txtStatusPopupResultadosUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Disponível"
            android:textSize="14sp"
            android:textColor="#00C853"
            android:gravity="center"
            android:layout_marginBottom="18dp" />

        <!-- BOTÕES: EMPRÉSTIMO / ONLINE -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <Button
                android:id="@+id/btnEmprestimoPopupResultadosUsuario"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Empréstimo"
                android:textColor="#000"
                android:textStyle="bold"
                android:backgroundTint="#FFFFFF"
                android:layout_marginEnd="12dp"/>

            <Button
                android:id="@+id/btnOnlinePopupResultadosUsuario"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Online"
                android:textColor="#000"
                android:textStyle="bold"
                android:backgroundTint="#FFFFFF"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnFavoritosPopupResultadosUsuario"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Favoritos"
            android:textColor="#000"
            android:textStyle="bold"
            android:backgroundTint="#FFFFFF" />

    </LinearLayout>

    <!-- BARRA INFERIOR -->
    <LinearLayout
        android:id="@+id/barraInferiorPopupResultadosUsuario"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/iconHomePopupResultadosUsuario"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/home"
            android:tint="#FFFFFF"
            android:layout_marginHorizontal="20dp" />

        <ImageView
            android:id="@+id/iconChatBotPopupResultadosUsuario"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/chatbot_ema"
            android:layout_marginHorizontal="20dp" />

        <ImageView
            android:id="@+id/iconMensagemPopupResultadosUsuario"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/email"
            android:layout_marginHorizontal="20dp" />

        <ImageView
            android:id="@+id/iconMenuPopupResultadosUsuario"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/menu_hamb"
            android:tint="#FFFFFF"
            android:layout_marginHorizontal="20dp" />
    </LinearLayout>

</RelativeLayout>

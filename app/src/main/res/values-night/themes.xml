<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Tema base sem ActionBar (modo escuro) -->
    <style name="Base.Theme.BIBLIFOR" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Remove ActionBar -->
        <item name="windowActionBar">false</item>
        <item name="android:windowActionBar">false</item>

        <!-- Mantém a cor azul na status bar -->
        <item name="android:statusBarColor">#005BFF</item>

        <!-- Ícones da status bar brancos -->
        <item name="android:windowLightStatusBar">false</item>

        <!-- O conteúdo ocupa a tela toda -->
        <item name="android:fitsSystemWindows">false</item>
    </style>

    <style name="Theme.BIBLIFOR" parent="Base.Theme.BIBLIFOR" />
</resources>

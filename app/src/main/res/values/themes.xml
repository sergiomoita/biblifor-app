<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.BIBLIFOR" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- ActionBar off -->
        <item name="windowActionBar">false</item>
        <item name="android:windowActionBar">false</item>

        <!-- STATUS BAR -->
        <item name="android:statusBarColor">#005BFF</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- NAVIGATION BAR -->
        <!-- deixe o app desenhar por baixo e use a mesma cor do fundo -->
        <item name="android:navigationBarColor">#005BFF</item>
        <!-- Ícones claros na nav bar -->
        <item name="android:windowLightNavigationBar">false</item>
        <!-- evita o Android forçar preto por contraste -->
        <item name="android:enforceNavigationBarContrast">false</item>

        <!-- Conteúdo ocupa a tela toda -->
        <item name="android:fitsSystemWindows">false</item>
    </style>

    <style name="Theme.BIBLIFOR" parent="Base.Theme.BIBLIFOR" />
</resources>

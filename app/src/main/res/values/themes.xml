<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Tema base sem ActionBar -->
    <style name="Base.Theme.BIBLIFOR" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Remove a ActionBar -->
        <item name="windowActionBar">false</item>
        <item name="android:windowActionBar">false</item>

        <!-- COR DA STATUS BAR (com prefixo android:) -->
        <item name="android:statusBarColor">#005BFF</item>

        <!-- Ícones da status bar brancos -->
        <item name="android:windowLightStatusBar">false</item>

        <!-- Permite que o conteúdo ocupe toda a tela -->
        <item name="android:fitsSystemWindows">false</item>
    </style>

    <style name="Theme.BIBLIFOR" parent="Base.Theme.BIBLIFOR" />
</resources>
